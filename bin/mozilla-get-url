#! /usr/bin/env node

var program = require('commander');

program.
  option(
    '--os <os>', 
    'operating system to find build for [mac, win32, linux-i686, linux-x86_64]'
  ).
  option(
    '-l, --langauge [lang]',
    'language of build (not used in --tinderbox or --channel)'
  ).
  option(
    '--version [version]',
    'release version [latest, 24.0]',
    'latest'
  ).
  option(
    '-p, --product [name]',
    'gecko product to download [firefox, b2g]',
    'firefox'
  ).
  option(
    '-c, --channel [name]',
    'pre-release channel [aurora, beta, nightly]'
  ).
  option(
    '--tinderbox [folder]',
    'tinderbox release folder [mozilla-central]'
  ).
  parse(process.argv);

if (!program.os) {
  console.error('  --os is required');
  program.outputHelp();
  process.exit();
}

var get = require('../');
get(program, function(err, url) {
  if (err) {
    throw err;
  }
  console.log(url);
});
